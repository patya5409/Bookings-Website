    </nav>
    <h1>Hey There Viewers!!</h1>
    <form class="p-3" method="POST" action="/todo">
      <input  id="form1" type="text" name="item" required>
      <input id="form2" type="text" name="extra" required>
      <button id="bs" type="submit" class="btn btn-primary">Add item</button>
    </form>
    <ul class="p-3" id="ul1">
      <% for(i=0;i<data.length;i++){ %>
